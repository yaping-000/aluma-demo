# Environment variables for Aluma Demo Backend
# Copy this file to .env and fill in your actual values

# Frontend origin for CORS (comma-separated for multiple origins)
FRONTEND_ORIGIN=https://your-demo.netlify.app,https://yourname.github.io

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Vision credentials (base64 encoded)
# Optional: Only needed if using Google Cloud Vision for image processing
GCP_CREDENTIALS_B64=your_base64_encoded_credentials_here

# Server port
PORT=3000

# Supabase configuration (if using Supabase for analytics)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
